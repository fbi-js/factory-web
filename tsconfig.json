{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "lib",
    "strict": true,
    "pretty": true,
    "target": "es2017",
    "noImplicitThis": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["templates/**/*"]
}
