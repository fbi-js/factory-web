{
  "name": "<%= project.name %>",
  "version": "0.0.0",
  "description": "<%= project.description %>",
  "private": true,
  "scripts": {
    "dev": "fbi serve <% if (project.isMicro) { %>-p 9001<% } %>",
    "build": "fbi build",
    "lint": "eslint src --ext js,jsx,<% if (project.features.typescript) { %>ts,tsx<% } %> --fix",
    "format": "prettier -c --write \"./**/*.{js,jsx,<% if (project.features.typescript) { %>ts,tsx,<% } %>md,html,css}\""
  },
  "dependencies": {
    <%_ if (project.isMicro) { _%>
    "single-spa-react": "^3.2.0",
    "systemjs-webpack-interop": "^2.3.1",
    <%_ } _%>
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.12.7",
    "@fbi-js/factory-web": "~1",
    <%_ if (project.features.typescript) { _%>
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    <%_ } _%>
    <%_ if (project.isMicro) { _%>
    "@types/single-spa-react": "^3.0.0",
    <%_ } _%>
    "eslint-config-react-app": "^6.0.0",
    "react-hot-loader": "^4.13.0"
  },
  "fbi": {
    "factory": {
      "id": "<%= factory.id %>",
      "version": "<%= factory.version %>",
      "template": "<%= factory.template %>",
      "features": <%- JSON.stringify(project.features) %>
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      <%_ if (project.features.typescript) { _%>
      "@babel/preset-typescript",
      <%_ } _%>
      [
        "@babel/preset-react",
        {
          "runtime": "automatic"
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "rules": {
      "semi": [
        "error",
        "never"
      ]
    }
  },
  "postcss":{
    "plugins": [
      "postcss-preset-env"
    ]
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all",
    "endOfLine": "auto"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "plugins": [],
    "ignoreFiles": [],
    "rules": {}
  }
}
