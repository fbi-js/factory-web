{
  "name": "<%_ if (project.orgName) { _%>@<%= project.orgName %>/<%_ } _%><%= project.name %>",
  "version": "0.0.0",
  "description": "<%= project.description %>",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "fbi serve",
    "build": "fbi build",
    "lint": "eslint --ext js,ts --fix",
    "format": "prettier -c --write \"**/*.{js,ts,md,html,css}\""
  },
  "dependencies": {
    "single-spa": "^5.8.3",
    "axios": "^0.21.0"
  },
  "devDependencies": {
    "@fbi-js/factory-web": "^<%= factoryVersion %>",
    "@types/systemjs": "^6.1.0",
    "typescript": "^4.1.3"
  },
  "fbi": {
    "factory": {
      "id": "<%= factory.id %>",
      "version": "<%= factory.version %>",
      "template": "<%= factory.template %>",
      "features": <%- JSON.stringify(project.features) %>
    },
    "paths": {
      "js": "js",
      "css": "css",
      "cssExtractPublicPath": "../",
      "img": "img",
      "assets": "assets"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "ignorePatterns": [],
    "rules": {
      "semi": [
        "error",
        "never"
      ]
    }
  },
  "postcss":{
    "plugins": [
      "postcss-preset-env"
    ]
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all",
    "endOfLine": "auto"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "plugins": [],
    "ignoreFiles": [],
    "rules": {}
  }
}
